<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiMotabara.OrdersMotabaraActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="#01b9b1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#C6C6C6"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo"
            android:layout_alignStart="@+id/imageLogo"
            android:layout_alignEnd="@+id/imageLogo"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_hagz_green"
            android:gravity="center"
            android:padding="2dp"
            android:text="محجوز"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="نوع التطوع"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="نوع التطوع"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_time"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="التطوع بالمال"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/kind_hagz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="طريقة السحب"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="أظهر المزيد  >"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/HagHagz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="حجز الحاج"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/reHag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HagHagz"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#C6C6C6"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageLogo2"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/stateHag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo2"
            android:layout_alignStart="@+id/imageLogo2"
            android:layout_alignEnd="@+id/imageLogo2"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_hagz_green"
            android:gravity="center"
            android:padding="2dp"
            android:text="محجوز"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo2"
            android:layout_alignStart="@+id/imageLogo2"
            android:layout_alignEnd="@+id/imageLogo2"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_hagz_green"
            android:gravity="center"
            android:padding="2dp"
            android:text="محجوز"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo2"
            android:text="تاريخ ووقت الحجز"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/data_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d2"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo2"
            android:text="تاريخ ووقت الحجز"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_time2"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo2"
            android:text="نوع الحجز"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/kind_hagz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s2"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo2"
            android:text="نوع الحجز"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reHag"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="أظهر المزيد  >"
            android:textAlignment="textStart"
            android:textColor="#808080"
            android:textSize="18sp" />

    </RelativeLayout>



</RelativeLayout>