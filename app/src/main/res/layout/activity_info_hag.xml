<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uiMotabara.InfoHag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="#01b9b1"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <TextView
        android:id="@+id/text"
        android:textColor="@color/black"
        android:text="لا يوجد حجاج / معتمرين الان"
        android:textSize="30dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#C6C6C6"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="اسم الحاج / المعتمر"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name_hag"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/imageLogo"
            android:text="اسم الحاج / المعتمر"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="نوع التطوع"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/d"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/imageLogo"
            android:text="دف عربة"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/data_time_hagz"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="رقم هاتف الحاج / المعتمر"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/numPhone_hag"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="رقم الحاج"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/s"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kind_tabara3"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="مكان الحاج / المعتمر"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/location_hag"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="مكان الحاج"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/j"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kind_withdraw"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="سن الحاج / المعتمر"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/number_old"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/j"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="سن الحاج"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kind_withdraw"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="الحالة الصحية للحاج / المعتمر"
            android:textColor="#808080"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sick_hag"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/imageLogo"
            android:text="الحالة الصحية للحاج"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/Accept"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_done_24"
            android:text="موافقة الطلب"
            android:background="@drawable/background_hagz_green"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="رفض الطلب"
            android:drawableTint="@color/black"
            android:background="@drawable/background_hagz_red"
            android:drawableLeft="@drawable/ic_baseline_clear_24"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Call"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/phone_iphone"
            android:text="الاتصال بالحاج"
            android:background="@drawable/coin_bg"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>